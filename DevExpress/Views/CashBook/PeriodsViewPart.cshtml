@using System.Web.UI.WebControls
@using DevExpress.Web
@using DevExpress.Web.Mvc.UI
@Html.DevExpress().TreeList(settings =>
{
    settings.Name = "PeriodsView";
    settings.CallbackRouteValues = new {Controller = "CashBook", Action = "PeriodsPart"};
    settings.Width = Unit.Percentage(99);
    settings.KeyFieldName = "ID";
    settings.ParentFieldName = "ParentID";
    settings.Columns.Add(col =>
    {
        col.FieldName = "Name";
        col.Caption = "Период";
    });
    settings.ClientSideEvents.BeginCallback = "OnBeginCallback";
    settings.ClientSideEvents.EndCallback = "OnEndCallback";
    settings.ClientSideEvents.FocusedNodeChanged = "OnFocusedNodeChanged";
    settings.SettingsBehavior.AllowFocusedNode = true;
    settings.Settings.VerticalScrollBarMode = ScrollBarMode.Visible;
    settings.Settings.ScrollableHeight = 100;
    settings.Height = 100;
}).Bind(Model).GetHtml()