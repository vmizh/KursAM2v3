<dx:DXWindow x:Class="KursWPFFormTest.InvoiceForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:control="clr-namespace:Core.Control;assembly=Core"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             mc:Ignorable="d"
             Title="{Binding WindowName}" MinHeight="450" MinWidth="800">
    <DockPanel>
        <control:WindowMenu Height="60" DockPanel.Dock="Top" />
        <Label x:Name="PART6_Text" Visibility="Hidden" Width="0" Height="0"
               Content="{Binding DatabaseName, NotifyOnSourceUpdated=True}" Foreground="{Binding DatabaseColor}" />

                <dxlc:DataLayoutControl DockPanel.Dock="Top"
                                    x:Name="layoutHeaderItems"
                                    CurrentItem="{Binding Document}"
                                    AutoGeneratingItem="LayoutItems_OnAutoGeneratingItem"
                                    AutoGeneratedUI="LayoutItems_OnAutoGeneratedUI"
                                    AutoGeneratedGroup="LayoutHeaderItems_OnAutoGeneratedGroup"
                                       
                                   />
        <dxlc:LayoutGroup View="Tabs"
                              Name="mainLayoutControl"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch" 
                              dxlc:LayoutControl.AllowVerticalSizing="True">
            <dxlc:LayoutGroup Header="Строки"
                                  Name="mainLayoutControl3">
                    <dxg:GridControl Name="gridRows"
                         Margin="0,10,0,0"
                                     AutoGenerateColumns="AddNew"
                                     EnableSmartColumnsGeneration="True"
                                     HorizontalAlignment="Stretch" 
                                     VerticalAlignment="Stretch"
                                     MaxHeight="10000"
                                     MaxWidth="10000"
                                     dx:DXSerializer.SerializationID="gridRows"
                                     dx:DXSerializer.StoreLayoutMode="None"
                                     dxg:DataControlSerializationOptions.AddNewColumns="False"
                                     dxg:DataControlSerializationOptions.RemoveOldColumns="False"
                                     SelectionMode="Row"
                                     ItemsSource="{Binding Document.Rows, NotifyOnSourceUpdated=True}"
                                     CurrentItem="{Binding CurrentRow, NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}"
                                     SelectedItems="{Binding SelectedRows, NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}"
                                     AutoGeneratingColumn="GridRows_OnAutoGeneratingColumn"
                                     AutoGeneratedColumns="GridRows_OnAutoGeneratedColumns"
                                     CurrentColumn="{Binding CurrentColumn, Mode=TwoWay}"
                                     >
                        <dxg:GridControl.View>
                            <dxg:TableView ShowTotalSummary="True"
                                           Name="tableViewRows"
                                           ShowAutoFilterRow="True">
                                <dxg:TableView.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Добавить номенклатуру" Command="{Binding AddNomenklCommand}" />
                                        <MenuItem Header="Удалить номенклатуру" Command="{Binding DeleteNomenklCommand}" />
                                        <Separator/>
                                        <MenuItem Header="Добавить из договора" Command="{Binding AddFromDogovorCommand}" />
                                        <Separator/>
                                        <MenuItem Header="Накладные расходы">
                                            <MenuItem Header="По стоимости" Command="{Binding SetTypeNakladCommand}" CommandParameter="0"/>
                                            <MenuItem Header="По цене за единицу"  Command="{Binding SetTypeNakladCommand}" CommandParameter="1"/>
                                            <MenuItem Header="По количеству"  Command="{Binding SetTypeNakladCommand}" CommandParameter="2"/>
                                            <MenuItem Header="По весу"  Command="{Binding SetTypeNakladCommand}" CommandParameter="3"/>
                                            <MenuItem Header="По объему"  Command="{Binding SetTypeNakladCommand}" CommandParameter="4"/>
                                            <MenuItem Header="По стоимости" Command="{Binding SetTypeNakladCommand}" CommandParameter="5"/>
                                            <MenuItem Header="В ручную" Command="{Binding SetTypeNakladCommand}" CommandParameter="6"/>
                                        </MenuItem>
                                        <Separator />
                                        <MenuItem Header="Экспорт" Command="{Binding VisualControlExportCommand}"
                                                  CommandParameter="{Binding Path=PlacementTarget, 
                           RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type ContextMenu}}}">
                                            <MenuItem.Icon>
                                                <Image
                                                    Source="pack://siteoforigin:,,,/Images/export1.png" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Копировать итоговую сумму"
                                                  Command="{Binding GetColumnSummaCommand}"
                                                  CommandParameter="{Binding Path=PlacementTarget, 
                           RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type ContextMenu}}}" />
                                        </ContextMenu>
                                </dxg:TableView.ContextMenu>
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EventToCommand EventName="CellValueChanging"
                                                           Command="{Binding UpdateCalcRowSummaCommand}" />
                                </dxmvvm:Interaction.Behaviors>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </dxlc:LayoutGroup>
                <dxlc:LayoutGroup Header="Фактурирование"
                                  Name="mainLayoutControl4">
                    <dxg:GridControl Name="gridFacts"
                         Margin="0,10,0,0"
                                     AutoGenerateColumns="AddNew"
                                     EnableSmartColumnsGeneration="True"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     MaxHeight="1000"
                                     MaxWidth="2000"
                                     dx:DXSerializer.SerializationID="gridFacts"
                                     dx:DXSerializer.StoreLayoutMode="All"
                                     dxg:DataControlSerializationOptions.AddNewColumns="False"
                                     dxg:DataControlSerializationOptions.RemoveOldColumns="False"
                                     SelectionMode="Row"
                                     ItemsSource="{Binding Document.Facts, NotifyOnSourceUpdated=True}"
                                     CurrentItem="{Binding CurrentFact, NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}"
                                     SelectedItems="{Binding SelectedFacts, NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}"
                                     AutoGeneratingColumn="GridFacts_OnAutoGeneratingColumn"
                                     AutoGeneratedColumns="GridFacts_OnAutoGeneratedColumns"
                                     CurrentColumn="{Binding CurrentColumn, Mode=TwoWay}">
                        <dxg:GridControl.View>
                            <dxg:TableView ShowTotalSummary="True"
                                           Name="tableViewFacts"
                                           ShowAutoFilterRow="True">
                                <dxg:TableView.ContextMenu>
                                    <ContextMenu>
                                       <MenuItem Header="Вставить связь" Command="{Binding AddStoreLinkCommand}" />
                                       <MenuItem Header="Удалить связь" Command="{Binding DeleteStoreLinkCommand}" />
                                        <Separator/>
                                        <MenuItem Header="Открыть документ" Command="{Binding OpenStoreLinkDocumentCommand}" />
                                        <Separator />
                                       <MenuItem Header="Экспорт" Command="{Binding VisualControlExportCommand}"
                                                  CommandParameter="{Binding Path=PlacementTarget, 
                           RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type ContextMenu}}}">
                                            <MenuItem.Icon>
                                                <Image
                                                    Source="pack://siteoforigin:,,,/Images/export1.png" />
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Копировать итоговую сумму"
                                                  Command="{Binding GetColumnSummaCommand}"
                                                  CommandParameter="{Binding Path=PlacementTarget, 
                           RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type ContextMenu}}}" />
                                    </ContextMenu>
                                </dxg:TableView.ContextMenu>
                            </dxg:TableView>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
    </DockPanel>
</dx:DXWindow>