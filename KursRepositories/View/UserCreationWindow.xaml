<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    x:Class="KursRepositories.View.UserCreationWindow"
    Title="Создание нового пользователя" Height="400" Width="400"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors">
    <dxlc:LayoutControl>
        
        <dxlc:LayoutGroup Orientation="Horizontal">
            <dxlc:LayoutGroup Orientation ="Horizontal" 
                              View="Group">
                <GroupBox Header="Фотография" 
                Margin="0 0 10 0">
                <dxlc:LayoutItem  Width="150"
                                  Height="150">
                    <Image Source="{Binding Path=Photo}" HorizontalAlignment="Left" Width="150" Height="150" />
                </dxlc:LayoutItem>
                </GroupBox>

                <GroupBox Header="Информация о пользователе"
                          Margin="10 0 10 0">
                    <dxlc:LayoutGroup Orientation="Vertical">
                            <dxlc:LayoutItem Label="Фамилия">
                                <dxe:TextEdit Text="{Binding }" />
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="Имя ">
                                <dxe:TextEdit Text="{Binding }" />
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="Отчество ">
                                <dxe:TextEdit Text="{Binding }" />
                            </dxlc:LayoutItem>
                            <dxlc:LayoutItem Label="Полное имя">
                                <dxe:TextEdit Text="{Binding }" />
                            </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="Имя для авторизации">
                            <dxe:TextEdit Text="{Binding }" />
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                </GroupBox>

                <GroupBox Header="Доп. возможности">
                    <dxlc:LayoutItem>
                    <StackPanel Orientation="Vertical">
                            <dxe:CheckEdit x:Name="AdminCheckEdit"
                                           Content="Администрато"/>
                            <dxe:CheckEdit x:Name="TesterCheckEdit"
                                           Content="Тестировщик"/>
                        </StackPanel>
                    </dxlc:LayoutItem>
                </GroupBox>




            </dxlc:LayoutGroup>
        </dxlc:LayoutGroup>

    </dxlc:LayoutControl>
</dx:ThemedWindow>
