<dx:ThemedWindow
    x:Class="KursRepositories.View.RoleCreationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    Title="RoleCreationWindow" Height="800" Width="1200" Left="20" Top="20"
    >

    <dxlc:LayoutControl HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        dxlc:LayoutControl.AllowHorizontalSizing="True"
                        dxlc:LayoutControl.AllowVerticalSizing="True"
                        >

        <dxlc:LayoutGroup Name="RootLayoutGroup"
                              Orientation="Vertical" 
                              View="GroupBox"
                              Header=""
                              >
                    <dxlc:LayoutGroup Name="LayoutButtonsGroup"
                              Orientation="Vertical"
                              Margin="5" 
                              View="Group" 
                              dxlc:LayoutControl.AllowVerticalSizing="True">

                                <dxlc:LayoutItem Margin="0 0 0 5">

                                    <StackPanel Name="ButtonStackPanel"
                                                Orientation="Horizontal">

                                        <Button x:Name="ButtonAddNewUser"
                                                Content="Удалить роль"
                                                Margin="0 0 5 0"
                                                Background="GhostWhite">
                                        </Button>
                                        <Button x:Name="ButtonSaveChanges"
                                                Margin="5 0 5 0"
                                                Content="Создать роль" 
                                                Background="GhostWhite"
                                                >
                                        </Button>
                                    </StackPanel>
                                </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Name="GridsGroup"
                                      >
                        <dxlc:LayoutGroup Name="LayoutRoleGroup" 
                                          Orientation="Horizontal" 
                                          View="Group"
                                          dxlc:LayoutControl.AllowHorizontalSizing="True"
                                          >
                                <dxg:GridControl x:Name="RolesGridControl"
                                                         AutoGenerateColumns="AddNew"
                                                         EnableSmartColumnsGeneration="True"
                                                         VerticalAlignment="Top"
                                                         ItemsSource="{Binding RoleList, UpdateSourceTrigger=PropertyChanged}"
                                                         CurrentItem="{Binding CurrentRole, UpdateSourceTrigger=PropertyChanged}"
                                                         MaxHeight="1000"
                                                         MaxWidth="10000">
                                            <dxg:GridControl.View>
                                                <dxg:TableView ShowTotalSummary="True" IsSynchronizedWithCurrentItem="True"/>
                                            </dxg:GridControl.View>
                                            <dxg:GridControl.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Удалить роль" />
                                                </ContextMenu>
                                            </dxg:GridControl.ContextMenu>
                                </dxg:GridControl>
                        </dxlc:LayoutGroup>

                            <dxlc:LayoutGroup
                                dxlc:LayoutControl.AllowHorizontalSizing="True"
                                            >
                                <dxg:GridControl x:Name="RoleItemsGridControl"
                                                     AutoGenerateColumns="AddNew"
                                                     EnableSmartColumnsGeneration="True"
                                                     VerticalAlignment="Top"
                                                     ItemsSource="{Binding RoleItemsList, UpdateSourceTrigger=PropertyChanged}"
                                                     MaxHeight="1000"
                                                     MaxWidth="10000"
                                                     >
                                        <dxg:GridControl.View>
                                            <dxg:TableView ShowTotalSummary="True" IsSynchronizedWithCurrentItem="True"/>
                                        </dxg:GridControl.View>
                                </dxg:GridControl>
                            </dxlc:LayoutGroup>
            </dxlc:LayoutGroup>
        </dxlc:LayoutGroup>


    </dxlc:LayoutControl>

</dx:ThemedWindow>
