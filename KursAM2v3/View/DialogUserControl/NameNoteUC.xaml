<UserControl x:Class="KursAM2.View.DialogUserControl.NameNoteUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="450">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="{Binding HeaderName}" Width="100" />
            <dxe:TextEdit EditValue="{Binding Name, Mode=TwoWay}" Width="300" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="{Binding HeaderNote}" Width="100" />
            <dxe:TextEdit EditValue="{Binding Note, Mode=TwoWay}" Width="300" Height="60"
                          TextWrapping="Wrap" />
        </StackPanel>

    </StackPanel>
</UserControl>