<UserControl x:Class="KursAM2.View.Management.ProfitAndLossesControls.AccruedOfSupplierUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <dxlc:LayoutControl x:Name="LayoutControl">
        <dxlc:LayoutGroup View="Tabs">
            <dxlc:LayoutGroup Header="Документы">
                <dxg:GridControl x:Name="gridRows"
                                 Style="{StaticResource GridControl.Base}"
                                 ItemsSource="{Binding AccruedDocumentList, NotifyOnSourceUpdated=True}"
                                 CurrentItem="{Binding CurrentAccruedDocument, UpdateSourceTrigger=PropertyChanged}"
                                 AutoGeneratingColumn="GridRows_OnAutoGeneratingColumn"
                                 AutoGeneratedColumns="GridRows_OnAutoGeneratedColumns"
                                 MasterRowExpanding="gridRows_MasterRowExpanding"
                                 CurrentColumn="{Binding CurrentColumn, Mode=TwoWay}">
                    <dxg:GridControl.View>
                        <dxg:TableView x:Name="tableViewRows"
                                       Style="{StaticResource TableView.Standart}">
                            <dxg:TableView.ContextMenu>
                                <ContextMenu>
                                    <Separator />
                                    <MenuItem Header="Экспорт"
                                              Command="{Binding VisualControlExportCommand}"
                                              CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}, Mode=FindAncestor}}">
                                        <MenuItem.Icon>
                                            <Image
                                                Source="pack://siteoforigin:,,,/Images/export1.png" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Копировать итоговую сумму"
                                              Command="{Binding GetColumnSummaCommand}"
                                              CommandParameter="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}, Mode=FindAncestor}}" />
                                </ContextMenu>
                            </dxg:TableView.ContextMenu>
                        </dxg:TableView>
                    </dxg:GridControl.View>
                    <dxg:GridControl.DetailDescriptor>
                        <dxg:DataControlDetailDescriptor ShowHeader="False"
                                                         ItemsSourceBinding="{Binding AccruedRows, UpdateSourceTrigger=PropertyChanged}">
                            <dxg:GridControl AutoGenerateColumns="AddNew"
                                             Name="AccruedGridControl"
                                             EnableSmartColumnsGeneration="True"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch"
                                             MaxHeight="10000"
                                             MaxWidth="10000"
                                             dx:DXSerializer.SerializationID="gridDetailRows"
                                             dx:DXSerializer.StoreLayoutMode="All"
                                             dxg:DataControlSerializationOptions.AddNewColumns="True"
                                             dxg:DataControlSerializationOptions.RemoveOldColumns="True"
                                             CurrentItem="{Binding CurrentCrsConvertItem}"
                                             AutoGeneratingColumn="AccruedGridControl_OnAutoGeneratingColumn">
                                <dxg:GridControl.View>
                                    <dxg:TableView VerticalScrollbarVisibility="Auto"
                                                   NavigationStyle="Row"
                                                   ShowAutoFilterRow="False"
                                                   DetailHeaderContent="Прямые затраты"
                                                   ShowFixedTotalSummary="True" />
                                </dxg:GridControl.View>
                            </dxg:GridControl>
                        </dxg:DataControlDetailDescriptor>
                    </dxg:GridControl.DetailDescriptor>
                </dxg:GridControl>

            </dxlc:LayoutGroup>
            <dxlc:LayoutGroup Header="Строки док-тов" />

        </dxlc:LayoutGroup>
    </dxlc:LayoutControl>
</UserControl>
