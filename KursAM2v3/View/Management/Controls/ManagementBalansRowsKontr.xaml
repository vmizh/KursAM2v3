                    <dxg:GridColumn.EditSettings>
                        <dxe:CalcEditSettings AllowDefaultButton="False" DisplayFormat="n2" Mask="n2" />
                    </dxg:GridColumn.EditSettings>
                </dxg:GridColumn>
                <dxg:GridColumn Name="colEURPriceSecond" FieldName="PriceEUR2" Header="Цена"
                                ReadOnly="True"
