<dx:ThemedWindow
    x:Class="KursAM2.View.Base.StandartSearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:control="clr-namespace:Core.Control;assembly=KursDomain"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:KursAM2.View.UserControls"
    xmlns:helper="clr-namespace:Helper;assembly=Helper"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    dx:DXSerializer.Enabled="True"
    dx:WindowRestoreLayoutOptions.AllowRestoreStateForDisplayedWindow="True"
    dx:DXSerializer.StoreLayoutMode="All"
    mc:Ignorable="d"
    Title="{Binding WindowName}" MinHeight="450" Height="600" MinWidth="800"
    Icon="{Binding Source={StaticResource imageStandartSearch},
    Converter={StaticResource ImageSourceToIconConverter}, Mode=OneWay}"
    Style="{StaticResource DXSplashServices}">
    <dx:ThemedWindow.HeaderItems>
        <TextBlock Text="{Binding DatabaseName}" Foreground="{Binding DatabaseColor}"
                   FontFamily="Seqoe UI Light" FontSize="15" FontStyle="Italic" FontWeight="Bold"
                   VerticalAlignment="Center" HorizontalAlignment="Right" />
    </dx:ThemedWindow.HeaderItems>
    <dx:ThemedWindow.Resources>
        <helper:FormatConditionSelector x:Key="FormatConditionSelector" 
                                        ForegroundTemplate ="{StaticResource ForegroundRedTemplate}"
        />
    </dx:ThemedWindow.Resources>
    <Grid>
        <DockPanel Style="{StaticResource DXServices}">
            <control:WindowMenu Height="60" DockPanel.Dock="Top" />
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <dxe:DateEdit Width="120" EditValue="{Binding StartDate}"
                              IsEnabled="{Binding IsDateEnabled}" />
                <Label Content="по" />
                <dxe:DateEdit Width="120" EditValue="{Binding EndDate}"
                              IsEnabled="{Binding IsDateEnabled}" />
            </StackPanel>
            <dxg:GridControl
                Style="{StaticResource GridControl.Search}"
                Name="gridDocuments"
                Margin="0,10,0,0"
                dx:DXSerializer.SerializationID="gridDocuments"
                ItemsSource="{Binding Documents, UpdateSourceTrigger=PropertyChanged}"
                CurrentItem="{Binding CurrentDocument, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding CurrentDocument, UpdateSourceTrigger=PropertyChanged}"
                SelectedItems="{Binding SelectedDocuments, UpdateSourceTrigger=PropertyChanged}"
                CurrentColumn="{Binding CurrentColumn, Mode=TwoWay}"
                AutoGeneratingColumn="GridDocuments_OnAutoGeneratingColumn"
                CustomUnboundColumnDataCommand="{Binding UnboundColumnDataCommand, Converter={StaticResource ToTypedCommandConverter}}"
                >
                <dxg:GridControl.Columns>               
                    <dxg:GridColumn FieldName="ExtColumnDecimal" UnboundDataType="{x:Type sys:Decimal}" Visible="False"/>
                    <dxg:GridColumn FieldName="ExtColumnBoolean" UnboundDataType="{x:Type sys:Boolean}" Visible="False"/>
                    <dxg:GridColumn FieldName="ExtColumnString" UnboundDataType="{x:Type sys:String}" Visible="False"/>
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView
                        Name="gridDocumentsTableView"
                        Style="{StaticResource TableView.Search}" 
                        FormatConditionsSource="{Binding Rules}" 
                        FormatConditionGeneratorTemplateSelector="{StaticResource FormatConditionSelector}" />
                </dxg:GridControl.View>
            </dxg:GridControl>
        </DockPanel>
        <userControls:LoadingIndicator x:Name="loadingIndicator" Visibility="Hidden" VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Width="100"
                                   Height="100"
                                   RenderTransformOrigin="0.17,1.122" />
    </Grid>
</dx:ThemedWindow>
