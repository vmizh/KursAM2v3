<dx:DXWindow
    x:Class="KursAM2.View.KursReferences.KontragentControls.KontragentCardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:internal="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/internal"
    xmlns:helpers="clr-namespace:DevExpress.DemoData.Helpers;assembly=DevExpress.DemoData.v15.1.Core"
    xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"
    MinWidth="500" MinHeight="400"
    Title="{Binding Kontragent.Name}" Height="446.799" Width="525">
    <dx:DXWindow.Resources>
        <Style TargetType="{x:Type dxwui:PageAdornerControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="dxwui:PageAdornerControl">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}" Margin="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Grid Margin="0">
                                    <internal:NavigationHeaderControl VerticalAlignment="Center"
                                                                      x:Name="PART_NavigationHeader"
                                                                      Content="{TemplateBinding Header}"
                                                                      ContentTemplate="{TemplateBinding HeaderTemplate}"
                                                                      BackCommand="{TemplateBinding BackCommand}"
                                                                      ShowBackButton="{TemplateBinding ShowBackButton}" />
                                </Grid>
                                <ContentPresenter Grid.Row="1" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <helpers:SelectConverter x:Key="BackButtonPaddingConverter">
            <helpers:SelectState Key="False" Value="{helpers:BrushValue S=#FF3D3D3D}" />
            <helpers:SelectState Key="True" Value="{helpers:BrushValue S=#FFF7941E}" />
        </helpers:SelectConverter>
        <helpers:SelectConverter x:Key="BackButtonContentOpacityConverter">
            <helpers:SelectState Key="Normal" Value="{helpers:DoubleValue S=1}" />
            <helpers:SelectState Key="MouseOver" Value="{helpers:DoubleValue S=1}" />
            <helpers:SelectState Key="Pressed" Value="{helpers:DoubleValue S=0.35}" />
            <helpers:SelectState Key="Disabled" Value="{helpers:DoubleValue S=0.25}" />
        </helpers:SelectConverter>
        <Style x:Key="BackDemoButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Width" Value="41" />
            <Setter Property="Height" Value="47" />
        </Style>
        <ControlTemplate x:Key="DefaultHeaderControlTemplate" TargetType="internal:NavigationHeaderControl">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <internal:BackButton x:Name="PART_BackButton" Style="{StaticResource BackDemoButtonStyle}"
                                     Command="{TemplateBinding ActualBackCommand}" Margin="0,0,10,0">
                    <internal:BackButton.Template>
                        <ControlTemplate>
                            <Grid
                                Background="{helpers:SelectBinding Binding={Binding IsMouseOver, RelativeSource={RelativeSource TemplatedParent}}, Converter={StaticResource BackButtonPaddingConverter}}">
                                <Image Source="../../../Images/Box_Blue.png" HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Width="25" Height="25" />
                            </Grid>
                        </ControlTemplate>
                    </internal:BackButton.Template>
                </internal:BackButton>
                <ContentPresenter x:Name="PART_Content" VerticalAlignment="Center" Grid.Column="1" />
            </Grid>
        </ControlTemplate>
        <Style TargetType="{x:Type internal:NavigationHeaderControl}">
            <Setter Property="Template" Value="{StaticResource DefaultHeaderControlTemplate}" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontWeight" Value="Light" />
        </Style>
        <Style TargetType="{x:Type dxnav:TileBarItem}">
            <Setter Property="Background" Value="{x:Null}" />
            <Setter Property="Foreground" Value="Black" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Orange" />
                </Trigger>
            </Style.Triggers>
        </Style>

    </dx:DXWindow.Resources>
    <dxb:BarManager x:Name="MainBarManager">
        <dxb:BarManager.Items>
            <dxb:BarButtonItem x:Name="barButtonItemRefresh" Content="Обновить" GlyphSize="Large"
                               Glyph="pack://siteoforigin:,,,/Images/refresh.png" Alignment="Far"
                               Command="{Binding RefreshCommand}" />
            <dxb:BarButtonItem x:Name="barButtonItemSave" Content="Сохранить" GlyphSize="Large"
                               Glyph="pack://siteoforigin:,,,/Images/disk_blue_big.png" Alignment="Far"
                               Command="{Binding SaveDataCommand}" />
            <dxb:BarButtonItem x:Name="barButtonItemSchet" Content="Печать счета" GlyphSize="Large"
                               Command="{Binding PrintAccountCommand}" />
            <dxb:BarButtonItem x:Name="barButtonItemClose" Content="Закрыть" GlyphSize="Large"
                               Glyph="pack://siteoforigin:,,,/Images/document_out.png" Alignment="Far"
                               Command="{Binding CloseWindowCommand}"
                               CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type dx:DXWindow}}}" />
            <dxb:BarButtonItem x:Name="barButtonItemNewEmpty" Content="Новый контрагент" GlyphSize="Large"
                               Glyph="pack://siteoforigin:,,,/Images/document_plain_new.png" />
            <dxb:BarButtonItem x:Name="barButtonItemCopy" Content="Копия" GlyphSize="Large"
                               Glyph="pack://siteoforigin:,,,/Images/document_add.png"
                               ToolTip="Новый контрагент - копия текущего" />
            <dxb:BarButtonItem x:Name="barButtonItemDel" Content="Удалить документ" GlyphSize="Large"
                               Glyph="pack://siteoforigin:,,,/Images/document_delete.png" />
        </dxb:BarManager.Items>
        <dxb:BarManager.Bars>
            <dxb:Bar Caption="bar1" UseWholeRow="True" ShowDragWidget="False" AllowCustomizationMenu="False"
                     AllowDrop="False" AllowHide="False" AllowQuickCustomization="False" RotateWhenVertical="False"
                     IsMainMenu="True">
                <dxb:Bar.DockInfo>
                    <dxb:BarDockInfo ContainerType="Top" />
                </dxb:Bar.DockInfo>
                <dxb:BarButtonItemLink BarItemName="barButtonItemRefresh" />
                <dxb:BarButtonItemLink BarItemName="barButtonItemNewEmpty" />
                <dxb:BarSubItemLink BarItemName="barSubItemPrint" />
                <dxb:BarButtonItemLink BarItemName="barButtonItemCopy" />
                <dxb:BarButtonItemLink BarItemName="barButtonItemSave" />
                <dxb:BarButtonItemLink BarItemName="BarButtonItemOpen" />
                <dxb:BarButtonItemLink BarItemName="barButtonItemClose" />
                <dxb:BarButtonItemLink BarItemName="barButtonItemDel" />
            </dxb:Bar>
            <dxb:Bar x:Name="statusBar" Caption="Status Bar" IsStatusBar="True">
                <dxb:Bar.DockInfo>
                    <dxb:BarDockInfo ContainerType="Bottom" />
                </dxb:Bar.DockInfo>
            </dxb:Bar>
        </dxb:BarManager.Bars>
        <dxwui:PageAdornerControl>
            <dxwui:PageAdornerControl.Header>
                <DockPanel>
                    <TextBox BorderThickness="0" FontSize="20" FontWeight="Bold" Text="{Binding Kontragent.Name}"
                             DockPanel.Dock="Left" />
                </DockPanel>
            </dxwui:PageAdornerControl.Header>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                <dxnav:TileBar Width="200" x:Name="tileBarMenu" Padding="0" Margin="50,20,0,0"
                               AllowItemSelection="True"
                               Orientation="Vertical"
                               SelectedItem="{Binding SelectedTab, NotifyOnSourceUpdated=True,NotifyOnTargetUpdated=True}">
                    <dxnav:TileBarItem x:Name="mainTab" Content="Основные" Width="200"
                                       FontSize="16" Height="36"
                                       Padding="10,0,0,0"
                                       VerticalContentAlignment="Center"
                                       HorizontalAlignment="Left" />
                    <dxnav:TileBarItem x:Name="contactTab" Content="Контакты" Width="200"
                                       FontSize="16" Height="36"
                                       Padding="10,0,0,0"
                                       VerticalContentAlignment="Center"
                                       HorizontalAlignment="Left" />
                    <dxnav:TileBarItem x:Name="uchetTab" Content="Учетная информация" Width="200"
                                       FontSize="16" Height="36"
                                       Padding="10,0,0,0"
                                       VerticalContentAlignment="Center"
                                       HorizontalAlignment="Stretch" />
                    <dxnav:TileBarItem x:Name="bankTab" Content="Банковские счета" Width="200"
                                       FontSize="16" Height="36"
                                       Padding="10,0,0,0"
                                       VerticalContentAlignment="Center"
                                       HorizontalAlignment="Stretch" />
                    <dxnav:TileBarItem x:Name="gruzoTab" Content="Грузовые реквизиты" Width="200"
                                       FontSize="16" Height="36"
                                       Padding="10,0,0,0"
                                       VerticalContentAlignment="Center"
                                       HorizontalAlignment="Stretch" />
                </dxnav:TileBar>
                <dxwui:NavigationFrame x:Name="frame"
                                       Margin="10,20,0,0"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"
                                       HorizontalContentAlignment="Stretch"
                                       VerticalContentAlignment="Stretch"
                                       AnimationType="SlideHorizontal"
                                       BackNavigationMode="Root" />
            </StackPanel>
        </dxwui:PageAdornerControl>
    </dxb:BarManager>
</dx:DXWindow>